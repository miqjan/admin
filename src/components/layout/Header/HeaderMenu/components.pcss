.root ul{
  display: flex;
  align-items: center;
}
.root li{
  list-style: none;
  padding-left: 15px;
  color: #ffffff;
  font-size: 18px;
}
.root li:first-child{
  width: 40px;
  height: 40px;
  padding: 0;

}
.root li:first-child img{
  width: 100%;
  border:1px solid #ffffff;
  padding: 2px;
  border-radius: 50%;
}